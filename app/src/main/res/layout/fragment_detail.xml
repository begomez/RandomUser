<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/item_avatar"

        android:layout_width="0dp"
        android:layout_height="160dp"

        tools:srcCompat="@drawable/transparent"
        android:scaleType="centerCrop"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:transitionName="@string/shared_transition"

        android:background="@color/colorPrimary"
        />

    <LinearLayout
        android:id="@+id/item_info_container"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_margin="@dimen/item_pad_horiz"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_avatar"
        >

        <TextView
            android:id="@+id/item_fullname"

            android:layout_width="368dp"
            android:layout_height="wrap_content"

            style="@style/ItemTitle"

            tools:text="Full name"
            />

        <TextView
            android:id="@+id/item_location"

            android:layout_width="368dp"
            android:layout_height="wrap_content"

            style="@style/ItemSubtitle"

            tools:text="Location"

            />

        <TextView
            android:id="@+id/item_gender"

            android:layout_width="368dp"
            android:layout_height="wrap_content"

            style="@style/DetailBody"
            android:paddingLeft="0dp"

            tools:text="Gender"
            />

        <TextView
            android:id="@+id/item_mail"

            android:layout_width="368dp"
            android:layout_height="wrap_content"

            style="@style/DetailBody"
            android:paddingLeft="0dp"

            tools:text="Mail"

            />

        <TextView
            android:id="@+id/item_reg_date"

            android:layout_width="368dp"
            android:layout_height="wrap_content"

            style="@style/DetailBody"
            android:paddingLeft="0dp"

            tools:text="Mail"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
