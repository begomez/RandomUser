<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/item_avatar"

        android:layout_width="0dp"
        android:layout_height="160dp"

        app:srcCompat="@mipmap/ic_launcher"
        android:scaleType="centerCrop"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="@dimen/item_pad_horiz"
        />

    <TextView
        android:id="@+id/item_fullname"

        android:layout_width="368dp"
        android:layout_height="wrap_content"

        style="@style/DetailBody"

        tools:text="Gender"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_avatar"

         />

    <TextView
        android:id="@+id/item_gender"

        android:layout_width="368dp"
        android:layout_height="wrap_content"

        style="@style/DetailBody"

        tools:text="Name Surname"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_fullname"

         />

    <TextView
        android:id="@+id/item_location"

        android:layout_width="368dp"
        android:layout_height="wrap_content"

        style="@style/DetailBody"

        tools:text="Location"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_gender"

         />

    <TextView
        android:id="@+id/item_mail"

        android:layout_width="368dp"
        android:layout_height="wrap_content"

        style="@style/DetailBody"

        tools:text="Mail"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_location"

        />

    <TextView
        android:id="@+id/item_reg_date"

        android:layout_width="368dp"
        android:layout_height="wrap_content"

        style="@style/DetailBody"

        tools:text="Mail"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mail"

         />

</android.support.constraint.ConstraintLayout>
